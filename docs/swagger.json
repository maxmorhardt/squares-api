            "type": "object",
            "required": [
                "name",
                "owner"
            ],
            "properties": {
                "awayTeam": {
                    "type": "string",
                    "maxLength": 20
                },
                "homeTeam": {
                    "type": "string",
                    "maxLength": 20
                },
                "name": {
                    "type": "string",
                    "maxLength": 20,
                    "minLength": 1
                },
                "owner": {
                    "type": "string",
                    "maxLength": 255
                }
            }
        },
