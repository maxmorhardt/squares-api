                "awayTeamScore": {
                    "type": "integer"
                },
                "contestId": {
                    "type": "string"
                },
                "createdAt": {
                    "type": "string"
                },
                "createdBy": {
                    "type": "string"
                },
                "homeTeamScore": {
                    "type": "integer"
                },
                "id": {
                    "type": "string"
                },
                "quarter": {
                    "type": "integer"
                },
                "updatedAt": {
                    "type": "string"
                },
                "updatedBy": {
                    "type": "string"
                },
                "winner": {
                    "type": "string"
                },
                "winnerCol": {
                    "type": "integer"
                },
                "winnerName": {
                    "type": "string"
                },
                "winnerRow": {
                    "type": "integer"
                }
            }
        },
        "model.QuarterResultRequest": {
            "type": "object",
            "required": [
                "awayTeamScore",
                "homeTeamScore"
            ],
            "properties": {
                "awayTeamScore": {
                    "type": "integer",
                    "maximum": 9999,
                    "minimum": 0
                },
                "homeTeamScore": {
                    "type": "integer",
                    "maximum": 9999,
                    "minimum": 0
                }
            }
        },
        "model.Square": {
            "type": "object",
            "properties": {
                "col": {
                    "type": "integer"
                },
                "contestId": {
                    "type": "string"
                },
                "createdAt": {
                    "type": "string"
                },
                "createdBy": {
                    "type": "string"
                },
                "id": {
                    "type": "string"
                },
                "owner": {
                    "type": "string"
                },
                "ownerName": {
                    "type": "string"
                },
                "row": {
                    "type": "integer"
                },
                "updatedAt": {
                    "type": "string"
                },
                "updatedBy": {
                    "type": "string"
                },
                "value": {
                    "type": "string"
